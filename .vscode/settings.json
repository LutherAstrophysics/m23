{
  "editor.formatOnSave": true,
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length=99"],
  "isort.args": ["--profile", "black"],
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "cSpell.words": [
    "adus",
    "astropy",
    "astype",
    "dtype",
    "FWHM",
    "getdata",
    "getfitsdata",
    "linfit",
    "masterdark",
    "masterflat",
    "normfactors",
    "savetxt",
    "XFWHM",
    "yaspin",
    "YFWHM"
  ],
  "files.associations": {
    "**/**/*.toml": "plaintext"
  }
}
